<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="mt-3">전체 게시글 목록</h3>
      <br>
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>Title</th>
            <th>Created</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.id %></td>
              <td style="cursor: pointer;">
                <a href="/posts/<%= post.id %>"><%= post.title %></a>
              </td>
              <td><%= post.created_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>